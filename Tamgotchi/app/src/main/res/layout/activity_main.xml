<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="@mipmap/main_page_2">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="655dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/energyMeter"
            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="76dp"
            app:arc_bottom_text="Energy"
            app:arc_progress="40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:ignore="MissingConstraints" />


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/foodMeter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="375dp"
            app:arc_bottom_text="Food"
            app:arc_progress="40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:ignore="MissingConstraints" />

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/healthMeter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="269dp"
            app:arc_bottom_text="Health"
            app:arc_progress="40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/energyMeter"
            custom:ignore="MissingConstraints" />


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/happinessMeter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="330dp"
            app:arc_bottom_text="Happiness"
            app:arc_progress="40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/energyMeter"
            app:layout_constraintTop_toTopOf="parent"
            custom:ignore="MissingConstraints" />

        <Button
            android:id="@+id/reset"
            android:layout_width="75dp"
            android:layout_height="41dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="108dp"
            android:text="Reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/happinessMeter" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>